<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    tools:context="com.spf.app.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groups_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:clickable="true"
        android:contentDescription="@string/add_route"
        android:src="@drawable/ic_round_add_circle_outline_24"
        app:layout_constraintBottom_toBottomOf="@id/groups_recycler"
        app:layout_constraintEnd_toEndOf="@id/groups_recycler" />


</androidx.constraintlayout.widget.ConstraintLayout>